<% content_for :title, @check_in_spot.respond_to?(:name) ? @check_in_spot.name : "Check in spot" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_check_in_spots_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
        Back to Check in spots
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @check_in_spot.respond_to?(:name) ? @check_in_spot.name : "Check in spot ##{@check_in_spot.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_check_in_spot_path(@check_in_spot.id), class: "btn-primary" do %>
          <%= lucide_icon "pencil", class: "w-5 h-5 mr-2" %>
          Edit
        <% end %>

        <%= link_to admin_check_in_spot_path(@check_in_spot.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this check_in_spot?" },
            class: "btn-danger" do %>
          <%= lucide_icon "trash-2", class: "w-5 h-5 mr-2" %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Check in spot Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Title</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @check_in_spot.title %></div>
        </div>

        <!-- Subtitle -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Subtitle</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @check_in_spot.subtitle %></div>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@check_in_spot.description) %>
          </div>
        </div>

        <!-- Cover image -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cover image</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @check_in_spot.cover_image %></div>
        </div>

        <!-- Address -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Address</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @check_in_spot.address %></div>
        </div>

        <!-- Tips -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Tips</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@check_in_spot.tips) %>
          </div>
        </div>

        <!-- Slug -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Slug</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @check_in_spot.slug %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @check_in_spot.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @check_in_spot.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@check_in_spot.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @check_in_spot.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@check_in_spot.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
