<% content_for :title, "Edit Check in spot" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_check_in_spots_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Check in spots
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Edit Check in spot</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @check_in_spot], local: true, class: "space-y-6" do |form| %>
        <!-- Title -->
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, placeholder: "Enter title..." %>
        </div>

        <!-- Subtitle -->
        <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_field :subtitle, placeholder: "Enter subtitle..." %>
        </div>

        <!-- Description -->
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, rows: 5, placeholder: "Enter description..." %>
        </div>

        <!-- Cover image -->
        <div class="form-group">
          <%= form.label :cover_image %>
          <%= form.text_field :cover_image, placeholder: "Enter cover image..." %>
        </div>

        <!-- Address -->
        <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, placeholder: "Enter address..." %>
        </div>

        <!-- Tips -->
        <div class="form-group">
          <%= form.label :tips %>
          <%= form.text_area :tips, rows: 5, placeholder: "Enter tips..." %>
        </div>

        <!-- Slug -->
        <div class="form-group">
          <%= form.label :slug %>
          <%= form.text_field :slug, placeholder: "Enter slug..." %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_check_in_spot_path(@check_in_spot.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Check in spot", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
