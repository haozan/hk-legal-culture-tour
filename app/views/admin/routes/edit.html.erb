<% content_for :title, "Edit Route" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_routes_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Routes
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Edit Route</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @route], local: true, class: "space-y-6" do |form| %>
        <!-- Title -->
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, placeholder: "Enter title..." %>
        </div>

        <!-- Description -->
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, rows: 5, placeholder: "Enter description..." %>
        </div>

        <!-- Slug -->
        <div class="form-group">
          <%= form.label :slug %>
          <%= form.text_field :slug, placeholder: "Enter slug..." %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_route_path(@route.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Route", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
