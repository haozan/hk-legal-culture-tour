<% content_for :title, "Edit Tag" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_tags_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Tags
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Edit Tag</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @tag], local: true, class: "space-y-6" do |form| %>
        <!-- Name -->
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, placeholder: "Enter name..." %>
        </div>

        <!-- Color -->
        <div class="form-group">
          <%= form.label :color %>
          <%= form.text_field :color, placeholder: "Enter color..." %>
        </div>

        <!-- Slug -->
        <div class="form-group">
          <%= form.label :slug %>
          <%= form.text_field :slug, placeholder: "Enter slug..." %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_tag_path(@tag.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Tag", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
